{
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "src/**/*.json"]
}
