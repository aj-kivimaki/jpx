{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,

    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "baseUrl": ".",
    "paths": {
      "@ui/*": ["packages/ui/src/*"],
      "@shared/*": ["packages/shared/src/*"],
      "@jpx/ui/*": ["packages/ui/src/*"],
      "@jpx/shared/*": ["packages/shared/src/*"]
    }
  }
}
