{
  "name": "jpartynen",
  "license": "MIT",
  "private": true,
  "packageManager": "npm@10.9.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:admin": "npm run dev --workspace=admin-panel",
    "build": "turbo run build --force",
    "build:fast": "turbo run build --filter=frontend... --filter=admin-panel... --filter=@jpx/ui... --filter=@jpx/shared...",
    "typecheck": "turbo run typecheck --force",
    "typecheck:fast": "turbo run typecheck --filter=frontend... --filter=admin-panel... ",
    "test:all": "turbo run test:unit --force && npm run test:e2e",
    "test:unit": "turbo run test:unit --force",
    "test:e2e": "npm run test:e2e:front && npm run test:e2e:admin",
    "test:e2e:front": "start-server-and-test dev:frontend http://localhost:5173 'npm run cypress:run --workspace=frontend'",
    "test:e2e:admin": "start-server-and-test dev:admin http://localhost:5174 'npm run cypress:run --workspace=admin-panel'",
    "lint": "eslint \"apps/**/*.{ts,tsx,js,jsx}\" \"packages/**/*.{ts,tsx,js,jsx}\" --ignore-pattern '**/lcov-report/**' --max-warnings=0",
    "lint:fix": "eslint \"apps/**/*.{ts,tsx,js,jsx}\" \"packages/**/*.{ts,tsx,js,jsx}\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo run clean --force && rm -rf node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@cypress/react": "^9.0.1",
    "@cypress/webpack-dev-server": "^5.4.1",
    "@types/chai": "^5.2.3",
    "@types/node": "^20.5.2",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-istanbul": "^3.2.4",
    "cross-env": "^10.1.0",
    "eslint": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "start-server-and-test": "^2.1.3",
    "turbo": "2.6.3",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
